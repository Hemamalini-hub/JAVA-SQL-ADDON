public class DefaultConstructor{
    String name;
    int year;
    String language;
    //parameterized constructor
     DefaultConstructor(String name, int year,String lang){
         this.name=name;
         this.year=year;
         this.language=lang;
        //System.out.println("DefaultConstructor:"+" "+name+" "+year+" "+lang);
         }
         //copy constructor
         DefaultConstructor(DefaultConstructor copy){
              this.name=copy.name;
              this.year=copy.year;
         
         }
//method
void Display(){
     System.out.println("user-defined Constructor:"+" "+name+" "+year);
}

    public static void main(String[] args){
        // object creation
        //classname reference variable= new classname();
        //original constructor
        DefaultConstructor ref=new DefaultConstructor("hema",2006,"Human being");
        
        //copy constructor
        //reference to object
        System.out.println("copy constructor constructor:");
          DefaultConstructor ref2=new DefaultConstructor(ref);
        ref.Display();
        ref2.Display();
    }
}
