//Map Interface
import java.util.HashMap;
import java.util.Map;
//Collections
class studentprogram {
    public static void main(String[] args) {
    HashMap<String,Integer>  studentMarks=new HashMap<>();
       studentMarks.put("Hema",50);
       studentMarks.put("Malini",70);
       studentMarks.put("priya",100);
       int totalMarks=0;
      //for(datatype:variable)
      for(int marks:studentMarks.values()){
        totalMarks +=marks;
       }
        System.out.println("Student Total Marks:"+totalMarks);
       double avg = totalMarks /studentMarks.size() ;
           System.out.println(avg);
for(Map.Entry<String,Integer> entry :studentMarks.entrySet()) {
    System.out.println(entry.getKey()+" "+entry.getValue());
           }
       }
   
    }

 
